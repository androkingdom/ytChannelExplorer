<% if (!locals.channelData || locals.channelData.length===0) { %>
    <% if (!locals.isChannelExists && locals.isUsernameExists) { %>
        <div class="flex flex-col items-center justify-center h-full">
            <h2 class="text-2xl font-semibold text-red-400 mb-4">Channel Not Found</h2>
            <p class="text-gray-400 text-sm">The channel with the username
                <span class="font-semibold text-gray-200">
                    <%= username %>
                </span>
                does not exist
            </p>
        </div>
        <% } %>
            <% } else { %>
                <ul class="flex flex-col gap-4">
                    <% locals.channelData.forEach((channel)=> { %>
                        <li class="w-full" onclick="location.href='/channel/<%= channel.id %>'">
                            <%- include('ChannelPreviewCard', { channel }) %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
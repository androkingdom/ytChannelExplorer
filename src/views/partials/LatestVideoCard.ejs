<div
  class="w-full p-4 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-md text-white hover:bg-white/10 hover:shadow-xl transition duration-300 group"
>
  <div class="flex items-start space-x-4">
    <!-- Thumbnail -->
    <div class="w-20 h-20 rounded-xl overflow-hidden flex-shrink-0 border border-white/10 shadow-md">
      <img
        src="<%= singleVideo.thumbnailUrl %>"
        alt="<%= singleVideo.title %>"
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>

    <!-- Text Content -->
    <div class="flex flex-col justify-center space-y-1 max-w-md">
      <h2 class="text-lg font-semibold text-white truncate"><%= singleVideo.title %></h2>
      <p class="text-sm text-gray-300 line-clamp-2"><%= singleVideo.description %></p>
    </div>
  </div>
</div>
